        height: 420px;
        margin-left: 15px;
    }

    .text h3 {
        font-size: 230%;
        margin-bottom: 10px;
    }

    .text p{
        font-size: 190%;
    }

    .button a{
        display: block;
        border-radius: 5px;
        border-bottom: 1px solid #627ce3;
        width: 80%;
        font-size: 160%;
        padding: 10px;
        background: #405dca;
        color: #fff;
        text-align: center;
        text-decoration: none;
        margin:0 auto;
    }
    .button a:hover{
        margin: auto;
        text-decoration: none;
        background: #364ea5;
    }

